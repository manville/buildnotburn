
{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The user's unique ID from Firebase Authentication."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "phone": {
          "type": "string",
          "description": "The user's phone number."
        }
      },
      "required": ["id", "email"]
    },
    "Brick": {
      "title": "Brick",
      "description": "Represents a single task or 'brick' for a user.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the brick."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this brick."
        },
        "text": {
          "type": "string",
          "description": "The content of the brick."
        },
        "isCompleted": {
          "type": "boolean",
          "description": "Whether the brick is completed or not."
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date the brick was created (YYYY-MM-DD)."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the brick was created."
        }
      },
      "required": ["id", "userId", "text", "isCompleted", "date", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/bricks/{brickId}": {
      "schema": {
        "$ref": "#/entities/Brick"
      },
      "description": "Stores the bricks for each user."
    },
    "/checkouts/{sessionId}": {
        "schema": {
            "type": "object",
            "properties": {
                "email": {"type": "string"},
                "plan": {"type": "string", "enum": ["builder", "architect"]},
                "displayName": {"type": "string"},
                "phone": {"type": "string"}
            }
        },
        "description": "Temporary storage for user data during Stripe checkout."
    }
  }
}
